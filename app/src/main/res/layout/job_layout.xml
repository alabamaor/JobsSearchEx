<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:background="@android:color/white"
    android:padding="30dp">

    <ScrollView
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearLayoutJ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"
                    app:layout_constraintTop_toBottomOf="@id/txt_company_nameJ">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageViewTypeJ"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:src="@drawable/ic_fitness_center_black_24dp"
                        android:layout_marginEnd="1dp"
                        />
                    <TextView
                        android:id="@+id/txt_typeJ"
                        style="@style/IconTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Time" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageViewSalaryJ"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_marginEnd="1dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_attach_money_black_24dp" />

                    <TextView
                        android:id="@+id/txt_salaryJ"
                        style="@style/IconTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$40,000 - $50,000"  />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageViewLocationJ"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_marginEnd="1dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_location_city_black_24dp"/>

                    <TextView
                        android:id="@+id/txt_locationJ"
                        style="@style/IconTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Worldwide" />

                </LinearLayout>
                <TextView
                    android:id="@+id/txt_titleJ"
                    style="@style/Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="Android Developer"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_categoryJ" />

                <TextView
                    android:id="@+id/txt_categoryJ"
                    style="@style/IconTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Development"
                    app:layout_constraintEnd_toStartOf="@id/txt_publication_dateJ"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/txt_company_nameJ"
                    style="@style/IconTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Google"
                    android:layout_marginTop="3dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_titleJ" />

                <TextView
                    android:id="@+id/txt_publication_dateJ"
                    style="@style/IconTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="12/12/2001"
                    app:layout_constraintBottom_toBottomOf="@id/txt_categoryJ"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/txt_descJ"
                    style="@style/IconTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The full HTML job description here.The full HTML job description here.The full HTML job description here.The full HTML job description here.The full HTML job description here.The full HTML job description here.The full HTML job description here. The full HTML job description here. The full HTML job description here. The full HTML job description here. The full HTML job description here. The full HTML job description here. "
                    android:layout_marginTop="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linearLayoutJ" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</LinearLayout>